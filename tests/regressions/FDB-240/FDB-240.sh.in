#!/usr/bin/env bash

set -eu

yell() { echo "$(basename "$0"): $*" >&2; }
die() { yell "$*"; exit 1; }
try() { "$@" || die "error here => '$*'"; }

function request() {
  echo "RETRIEVE,CLASS=OD,TYPE=CF,STREAM=ENFO,EXPVER=0001,LEVTYPE=PL,DATE=20201106,TIME=1200,STEP=00,DOMAIN=G,$1" > req;
}

fdbread="$<TARGET_FILE:fdb-read>"
fdbwrite="$<TARGET_FILE:fdb-write>"
gribls="$<TARGET_FILE:grib_ls>"
gribset="$<TARGET_FILE:grib_set>"
srcdir=@CMAKE_CURRENT_SOURCE_DIR@
bindir=@CMAKE_CURRENT_BINARY_DIR@

export FDB5_CONFIG_FILE=local.yaml

########################################################################################################################
### cleanup and prepare test

try cd $bindir

rm -rf root
mkdir root

for f in local.yaml schema; do
  try cp $srcdir/$f $bindir
done

### populate fdb with t/vo/d/z

$gribset -s level=400 sh.300.grib sh.400.grib
$gribset -s level=500 sh.300.grib sh.500.grib

try cat sh.300.grib sh.400.grib sh.500.grib > all.grib

$fdbwrite all.grib

