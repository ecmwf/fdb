# test grib packingType
$gribset -s edition=2,step=24 in.grib 24.grib

$fdbwrite --modifiers=expver=zzzz,type=an,packingType=grid_ieee 24.grib

$fdblist --porcelain class=rd,expver=zzzz

cat > req.3 <<EOF
retrieve,
   class=rd,
   expver=zzzz,
   stream=oper,
   date=20201102,
   time=0000,
   type=an,
   levtype=sfc,
   step=24,
   domain=g,
   param=166
EOF

$fdbread req.3 out.grib

cat > list3enc <<EOF
{ "messages" : [
  {
    "edition": 2,
    "centre": "ecmf",
    "date": 20201102,
    "dataType": "an",
    "gridType": "regular_ll",
    "stepRange": 24,
    "typeOfLevel": "heightAboveGround",
    "level": 10,
    "shortName": "10v",
    "packingType": "grid_ieee"
  }
]}
EOF

$gribls -j out.grib            | post_process | tee out
cat list3enc                   | post_process | tee list
diff out list


cat > list3 <<EOF
{ "messages" : [
  {
    "domain": "g",
    "date": 20201102,
    "time": "0000",
    "expver": "zzzz",
    "class": "rd",
    "type": "an",
    "stream": "oper",
    "step": 24,
    "levtype": "sfc",
    "param": 166
  }
]}
EOF

$gribls -jm out.grib           | post_process | tee out
cat list3                      | post_process | tee list
